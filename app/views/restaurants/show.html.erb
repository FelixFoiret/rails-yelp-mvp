<div class= "container d-flex flex-column align-items-center">

  <h2 class="text-primary my-5"> <%= @restaurant.name %></h2>
    <p> <i class="fas fa-phone"></i> : <%= @restaurant.phone_number %></p>
    <p> <i class="fas fa-utensils"></i> : <%= @restaurant.category %></p>
    <p> <i class="fas fa-location-arrow"></i> : <%= @restaurant.address %></p>
</div>

<div class="container d-flex justify-content-center">
  <%= link_to 'Restaurants', restaurants_path, class: 'mx-3' %>

  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'mx-3' %>

  <%= link_to new_restaurant_review_path(@restaurant), class: 'mx-3' do %>
    <i class="fas fa-edit"></i>
  <%end %>

  <%= link_to restaurant_path(@restaurant), method: :delete, class: 'mx-3' do %>
      <i class="fas fa-trash-alt"></i>
  <% end %>
</div>

<div class="d-flex justify-content-center my-5">
 <% @restaurant.reviews.each do |review| %>
    <p class= 'p-2 mx-5 border border-info rounded'><%= review.content %>, <%= review.rating %></p>
  <%end %>
</div>
