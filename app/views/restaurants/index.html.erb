<div class="container d-flex flex-column align-items-center">

  <h1 class= 'text-primary'>Restaurants</h1>
    <%= link_to 'Add Restaurant', new_restaurant_path, class: 'btn btn-primary my-3'%>

    <ul>
      <% @restaurants.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant) do%>
          <div class= "mt-3">
            <%= restaurant.name %>
          </div>
        <%end %>
      <%end %>
    </ul>
</div>
